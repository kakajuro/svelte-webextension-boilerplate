{
  "manifest_version": 3,
  "name": "svelteWebextensionTemplate",
  "short_name": "svelteWebextensionTemplate",
  "version": "1.0.0",
  "description": "A cross platform web extension template using svelte",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
}
